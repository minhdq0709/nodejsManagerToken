<!doctype html>
<html>

<head>
    <link rel="stylesheet" href="css/dataTables.bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="statistic.js"></script>
    <script src="js/chart-2.9.4.js"></script>
    <script src="js/notify.min.js"></script>
    <style>
        body {
            word-wrap: break-word;
        }

        .chart-left {
            border: 1px solid black;
            padding: 10px;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .rowStyle{
            padding: 10px;
            border: 1px solid black;
        }

        .device {
            display: flex;
            justify-content: space-between;
            margin: 10px 0;
        }

        .device  .group1{
            display: flex;
            flex-basis: 50%;
            justify-content: space-evenly;

        }

    </style>
</head>

<body>
    <%- include('./header'); -%>
        <section class="content-header">
            <div class="container">
                <div class="row">
                    <div class="col-sm-10">
                        <small id="titleTab" style="padding-left: 0%; color: #000;">
                            <i class="glyphicon glyphicon-hand-right"></i>
                            <a href="/home"> Home</a> / Thống kê
                        </small>
                    </div>
                </div>

                <div class="row" style="padding-top:1%;">
                    <div class="col-lg-6">
                        <h5 class="title-chart">Cá nhân</h5>
                        <div class="chart-left">
                            <canvas id="myChartPersonal" style="width:100%; max-width:800px"></canvas>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <h5 class="title-chart">Team Crawler</h5>
                        <div class="chart-left">
                            <canvas id="myChartTeamCrawler" style="width:100%; max-width:800px"></canvas>
                        </div>
                    </div>
                </div>

                <div class="row" style="padding-top:1%;">
                    <div class="col-lg-6 ">
                        <h5 class="title-chart">Hiện trạng cá nhân</h5>
                        <div class="rowStyle">
                            <div class="device">
                                <div class="group1">
                                    <div class="labelKey">
                                        Tổng số token:
                                    </div>
                                    <div class="val">
                                        <b id="txtTotalToken">0</b>
                                    </div>
                                </div>
                                <div class="group1">
                                    <div class="labelKey">
                                        Số token sống:
                                    </div>
                                    <div class="val">
                                        <b id="txtUserLive">0</b>
                                    </div>
                                </div>
                            </div>
                            <div class="device">
                                <div class="group1">
                                    <div class="labelKey">
                                        Số user die:
                                    </div>
                                    <div class="val">
                                        <b id="txtUserDie">0</b>
                                    </div>
                                </div>
                                <div class="group1">
                                    <div class="labelKey">
                                        Lấy lại token:
                                    </div>
                                    <div class="val">
                                        <b id="txtChangePassword">0</b>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
</body>
</html>