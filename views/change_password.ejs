<!doctype html>
<html>

<head>
	<link rel="stylesheet" href="css/dataTables.bootstrap.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/jquery.dataTables.min.js"></script>
	<script src="js/dataTables.bootstrap.min.js"></script>
	<script src="js/notify.min.js"></script>
	<script src="change_password.js"></script>
	<script src="js/ShareForView/constant.js"></script>
	<style>
		body {
			word-wrap: break-word;
		}
	</style>
</head>

<body>
	<%- include('./header'); -%>
	<section class="content-header">
		<h4>
			<div class="row">
				<div class="col-sm-10">
					<small id="titleTab" style="padding-left: 7%; color: #000;">
						<i class="glyphicon glyphicon-pencil"></i> Home / Change password
					</small>
				</div>
			</div>
		</h4>
	</section>
	
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Chỉnh sửa token</h4>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tên user:</label>
                        <input type="text" class="form-control" id="txtUserName"
                            placeholder="NguyenVanA@gmail.com" disabled>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail1">Mật khẩu:</label>
                        <input type="text" class="form-control" id="txtPassword"
                            placeholder="Nhập password" disabled>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Tên page:</label>
                        <input type="text" class="form-control" id="txtNamePage" placeholder="Nhập tên page" disabled>
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword1">Token:</label>
                        <input type="text" class="form-control" id="txtToken" placeholder="Nhập token">
                    </div>

                    <input type="text" class="form-control" id="txtId" style="display: none">
                </div>

                <div class="modal-footer">
                    <button class="btn btn-primary" id="Save" onclick="Save()">Lưu</button>
                    <button class="btn btn-danger" id="Close" onclick="Close()">Đóng</button>
                </div>
            </div>
        </div>
    </div>

	<div class="container">
		<div class="row">
			<table id="example" class="table table-striped table-bordered" style="width:100%">
				<thead>
					<tr>
						<th style="width: 45%; text-align: center;">Tên User</th>
                        <th style="width: 45%; text-align: center;">Tên Page</th>
						<th style="width: 10%; text-align: center;">Option</th>
					</tr>
				</thead>
				<tbody id="bodyTable">
				</tbody>
			</table>
		</div>
	</div>
</body>
</html>