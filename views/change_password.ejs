<!doctype html>
<html>

<head>
	<link rel="stylesheet" href="css/dataTables.bootstrap.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
	<script src="js/bootstrap.min.js"></script>
	<script src="js/jquery.dataTables.min.js"></script>
	<script src="js/dataTables.bootstrap.min.js"></script>
	<script src="js/notify.min.js"></script>
	<script src="change_password.js"></script>
	<script src="js/ShareForView/constant.js"></script>
	<style>
		body {
			word-wrap: break-word;
		}
	
		.left-style {
			text-align: left !important;
		}
	
		.modal-content {
			height: 250px;
			overflow: auto;
		}
	</style>
</head>

<body>
	<%- include('./header'); -%>
	<section class="content-header">
		<h4>
			<div class="row">
				<div class="col-sm-10">
					<small id="titleTab" style="padding-left: 7%; color: #000;">
						<i class="glyphicon glyphicon-pencil"></i> Home / Change password
					</small>
				</div>
			</div>
		</h4>
	</section>
	
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog" style="width: 940px;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Chỉnh sửa token</h4>
                </div>

                <div class="modal-body">
                    <form class="form-horizontal">
						<div class="form-group">
							<label class="control-label col-sm-2 left-style" for="email">Ten user:</label>
							<div class="col-sm-10">
							  <input type="email" class="form-control" id="email" placeholder="Enter email">
							</div>
						</div>

						<div>
							<div class="form-group">
								<label class="control-label col-sm-2 left-style" for="email">aaaaaaaaaaaaaaa:</label>
								<div class="col-sm-10">
								  <input type="email" class="form-control" id="email" placeholder="Enter email">
								</div>
							</div>
							<div class="form-group">
								<label class="control-label col-sm-2 left-style" for="email">aaaaaaaaaaaaaaa:</label>
								<div class="col-sm-10">
								  <input type="email" class="form-control" id="email" placeholder="Enter email">
								</div>
							</div>
						</div>
						
					</form>
					
                    <input type="text" class="form-control" id="txtId" style="display: none">
                </div>

                <div class="modal-footer">
                    <button class="btn btn-primary" id="Save" onclick="Save()">Lưu</button>
                    <button class="btn btn-danger" id="Close" onclick="Close()">Đóng</button>
                </div>
            </div>
        </div>
    </div>

	<div class="container">
		<div class="row">
			<table id="example" class="table table-striped table-bordered" style="width:100%">
				<thead>
					<tr>
						<th style="width: 45%; text-align: center;">Tên User</th>
						<th style="width: 10%; text-align: center;">Option</th>
					</tr>
				</thead>
				<tbody id="bodyTable">
				</tbody>
			</table>
		</div>
	</div>
</body>
</html>